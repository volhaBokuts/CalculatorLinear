<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NumberButton">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#352F2F</item>
        <item name="android:onClick">onNumberClick</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="OperationButton">
        <item name="android:textSize">24sp</item>
        <item name="android:background">#7E7E7E</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EqualButton">
        <item name="android:textSize">24sp</item>
        <item name="android:background">#99CC00</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
